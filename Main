import pickle
# i want to be able to load the list of apps
if os.path.exists("apps.pkl"):
    with open("apps.pkl", "rb") as f:
        app_list = pickle.load(f)
username = "user"
if os.path.exists("username.pkl"):
    with open("username.pkl", "rb") as f:
        username = pickle.load(f)
